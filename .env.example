# Discord Bot Token
# https://discord.com/developers/applications でBotを作成して取得
DISCORD_TOKEN=your_discord_bot_token_here

# Discord Client ID（Application ID）
# Discord Developer Portalの「General Information」からコピー
CLIENT_ID=your_client_id_here

# 監視するボイスチャンネルID
# DiscordでチャンネルIDをコピーして設定
VOICE_CHANNEL_ID=your_voice_channel_id_here

# Google Sheets ID
# SheetsのURLから取得: https://docs.google.com/spreadsheets/d/{SPREADSHEET_ID}/edit
SPREADSHEET_ID=your_spreadsheet_id_here

# タイムゾーン（日本時間）
TZ=Asia/Tokyo
